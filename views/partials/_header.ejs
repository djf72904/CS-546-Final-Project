<header>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Sora:wght@100..800&display=swap" rel="stylesheet">
  <div class="flex justify-between items-center mb-4">
    <div class="flex items-center">
      <h1 class="text-2xl font-bold">TypeBeat</h1>
    </div>
    <% if (!isAuthenticated) { %>
      <div class="flex items-center">
        <a href="/register" class="text-white hover:text-blue-700 mr-4 bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded-md">Register</a>
        <a href="/login" class="text-blue-500 hover:text-blue-700">Login</a>
      </div>
    <% } else { %>
      <div class="flex items-center">
        <a href="/profile" class="text-white hover:text-blue-700 mr-4 bg-blue-500 hover:bg-blue-600 px-4 py-2 rounded-md">Profile</a>
        <a id="logout" class="text-blue-500 hover:text-blue-700 cursor-pointer">Logout</a>
      </div>
    <% } %>
  </div>
  <script>
    const button = document.getElementById("logout");
    button.addEventListener("click", async () => {
      const response = await fetch('/logout', {
        method: 'GET',
      });

      if (response.ok) {
        window.location.href = '/';
      } else {
        alert('Error logging out');
      }
    });
  </script>
</header>